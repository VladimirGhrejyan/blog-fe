{
    "extends": "stylelint-config-standard-scss",
    "plugins": ["stylelint-prettier"],
    "rules": {
        "prettier/prettier": [true, { "singleQuote": true, "tabWidth": 4 }],
        "color-no-invalid-hex": true,
        "selector-class-pattern": null,
        "no-empty-source": null
    }
}
